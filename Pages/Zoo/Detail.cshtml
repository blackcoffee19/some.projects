@page "{id?}"
@model DetailModel
<div class="jumbotron p-3 flex align-items-center">
    <h1 class="display-4">Detail</h1>
    <a class="btn btn-sm btn-primary" asp-page="./Edit" style="float:right">Edit</a>
</div>
<div class="container">
    <h3>@Model.Animal.Name</h3>
    <h4>@Model.Animal.TypeAnimal</h4>
    @if(Model.Animal.Gender == "female"){
        <p>Her age: @Model.Animal.Age</p>
    } else {
        <p>His age: @Model.Animal.Age</p>
    }
    <p>Gender: @Model.Animal.Gender</p>
    <p>ID: @Model.Animal.ID</p>
</div>
<div class="d-flex">
    <div class="p-2 bg-success text-white text-right" style="flex:0 0 15%">
        @Html.DisplayNameFor(model => model.Animal.ID)
    </div>
    <div class="p-2 border-top border-right border-bottom border-success" style="flex:1 0 20%">
        @Html.DisplayFor(model => model.Animal.ID)
    </div>
</div>
<div class="d-flex">
    <div class="p-2 border-top border-right border-bottom border-success" style="flex:0 0 15%">
        @Html.DisplayNameFor(model => model.Animal.Name)
    </div>
    <div class="p-2 border-top border-right border-bottom border-success" style="flex:0 0 15%">
        @Html.DisplayNameFor(model => model.Animal.Name)
    </div>
</div>
<div class="d-flex">
    <div class="p-2 border-top border-right border-bottom border-success" style="flex:0 0 20%">
        @Html.DisplayNameFor(model => model.Animal.Age)
    </div>
    <div class="p-2 border-top border-right border-bottom border-success" style="flex:0 0 25%">
        @Html.DisplayNameFor(model => model.Animal.Age)
    </div>
</div>
<div class="d-flex">
    <div class="p-2 border-top border-right border-bottom border-success" style="flex:0 0 20%">
        @Html.DisplayNameFor(model => model.Animal.Gender)
    </div>
    <div class="p-2 border-top border-right border-bottom border-success" style="flex:0 0 25%">
        @Html.DisplayNameFor(model => model.Animal.Gender)
    </div>
</div>
