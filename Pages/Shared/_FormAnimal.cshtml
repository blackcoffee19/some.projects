@model RazorZoo.Pages.Zoo.EditModel
<div class="col">
    <form method="post">
        <div class="form-group">
            <label for="Animal.ID" class="form-label">ID</label>
            <input type="text" class="form-control" asp-for="Animal.ID" placeholder="What kind of animal?"/>
        </div>
        <div class="form-group">
            <label for="Animal.TypeAnimal" class="form-label" style="margin-top:10px;">Type of Animal</label>
            <input type="text" class="form-control" asp-for="Animal.TypeAnimal" placeholder="What kind of animal?"/>
        </div>
        <div class="form-group">
            <label for="Animal.Name" class="form-label" style="margin-top:10px;">Animal's Name</label>
            <input type="text" class="form-control" asp-for="Animal.Name" placeholder="What's it name?"/>
        </div>
        <div class="form-group">
            <label for="Animal.Age" class="form-label" style="margin-top:10px;">Animal's age</label>
            <input type="text" class="form-control" asp-for="Animal.Age" placeholder="What's it age'?"/>
        </div>
        <div class="form-group">
            <label for="Animal.Gender" class="form-label" style="margin-top:10px;">Animal's gender</label>
            <input type="text" class="form-control" asp-for="Animal.Gender"/>
        </div>
        <button type="submit" class="btn btn-info" value="Save" id="submit" style="margin-top:20px;">Submit</button>
    </form>
<div>
